<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:Poseidon.Product.Components"
    x:Class="Poseidon.Pos.Pages.PosPage"
    Visual="Material">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Order"
            Order="Secondary"
            Priority="0"/>
        <ToolbarItem
            Text="History"
            Order="Secondary"
            Priority="1"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <SearchBar
                x:Name="searchBar"
                FontSize="12"
                PlaceholderColor="Gray"
                Placeholder="Type Name/Code of the Product..."
                SearchCommand="{Binding SearchCommand}"
                SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}" />

            <Label
                IsVisible="{Binding IsActiveProductsEmpty}"
                Text="No active products found"
                Padding="10, 50"
                HorizontalOptions="CenterAndExpand"/>

            <components:ProductsList
                Items="{Binding ActiveProducts}"
                IsBusy="{Binding IsLoading}"
                TapItemCommand="{Binding TapProductCommandAsync}"
                RefreshCommand="{Binding RefreshCommandAsync}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

