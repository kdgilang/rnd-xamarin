<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:sys="clr-namespace:System;assembly=netstandard"
       xmlns:views="clr-namespace:Poseidon"
       x:Class="Poseidon.AppShell"
       FlyoutBackgroundColor="{StaticResource colorSecondary}"
       FlyoutBackgroundImageAspect="AspectFill"
       FlyoutHeaderBehavior="CollapseOnScroll">

    <Shell.FlyoutHeader>
        <StackLayout
            Padding="40"
            BackgroundColor="{StaticResource colorTertiary}"
            >
            <Frame
                HeightRequest="100"
                CornerRadius="150"
                IsClippedToBounds="True"
                Margin="0"
                Padding="0">
                <Image
                    Aspect="AspectFill"
                    Source="{Binding ImageUrl}" />
            </Frame>
            <Label
                HorizontalTextAlignment="Center"
                Text="{Binding Name}"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="Medium"
                Margin="0, 15, 0, 0"/>
        </StackLayout>
    </Shell.FlyoutHeader>

    <Shell.Resources>
        <Style x:Key="BaseStyle"
               TargetType="Element">
            <Setter Property="Shell.BackgroundColor"
                    Value="#455A64" />
            <Setter Property="Shell.ForegroundColor"
                    Value="White" />
            <Setter Property="Shell.TitleColor"
                    Value="{StaticResource colorPrimary}" />
            <Setter Property="Shell.DisabledColor"
                    Value="#B4FFFFFF" />
            <Setter Property="Shell.UnselectedColor"
                    Value="#95FFFFFF" />
        </Style>
        <Style x:Key="MenuItemShell"
               TargetType="Element"
               BasedOn="{StaticResource BaseStyle}">
            <Setter Property="Shell.BackgroundColor"
                    Value="{StaticResource colorSecondary}" />
        </Style>
    </Shell.Resources>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Route="pos"
            Style="{StaticResource MenuItemShell}"
            Title="Pos"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:MainPage}"
        />

        <ShellContent
            Route="profile"
            Style="{StaticResource MenuItemShell}"
            Title="Profile"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:MainPage}"
        />

        <ShellContent
            Route="product"
            Style="{StaticResource MenuItemShell}"
            Title="Product"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:MainPage}"
        />
    </FlyoutItem>



